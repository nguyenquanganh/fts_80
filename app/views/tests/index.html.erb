<table>
  <thead>
    <tr>
      <th><%= t "admin.subjects.name" %></th>
      <th><%= t "admin.chapters.name" %></th>
      <th><%= t "admin.tests.date" %></th>
      <th><%= t "admin.tests.score" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.chapter.subject.name %></td>
        <td><%= test.chapter.name %></td>
        <td><%= test.date %></td>
        <td><%= test.score %></td>
        <td><%= link_to t("view"), [@user, test],
          class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

