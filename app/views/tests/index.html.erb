<table>
  <thead>
    <tr>
      <th><%= t "tests.index.subject" %></th>
      <th><%= t "tests.index.chapter_id" %></th>
      <th><%= t "tests.index.date" %></th>
      <th><%= t "tests.index.score" %></th>
      <th><%= t "tests.status" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.chapter.subject.name %></td>
        <td><%= test.chapter.name %></td>
        <td><%= test.date %></td>
        <td><%= test.correct_answer_of_user %> /
          <%= test.correct_answer_of_test %>
        </td>
        <td><%= test.status %></td>
        <% if test.status == t("test.waitting") %>
          <td><%= link_to t("test.do_test"), [@user, test] %></td>
        <% else %>
          <td><%= link_to t("view"), [@user, test] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
