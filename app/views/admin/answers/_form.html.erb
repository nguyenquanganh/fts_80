<div class="format-login container">
<%= form_with model: [:admin, subject, chapter, question, answer],
  local: true do |form| %>
  <%= render "shared/error", object: answer %>
  <br/>
  <div class="field">
    <%= form.label :answer_content, t("admin.answers.content") %>
    <%= form.text_field :answer_content, id: :answer_content,
      class: "input-email" %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :is_correct, t("admin.answers.answer_type") %>
    <br/>
    <%= form.select :is_correct, [[t("admin.answers.a_true"), true],
      [t("admin.answers.a_false"), false]] %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit t("submit"), class: "input-submit" %>
  </div>
<% end %>
</div>
