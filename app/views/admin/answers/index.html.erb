<table>
  <thead>
    <tr>
      <th><%= t "admin.answers.content" %></th>
      <th><%= t "admin.answers.answer_type" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer_content %></td>
        <td><%= answer.is_correct %></td>
        <% if can? :edit, @answer %>
          <td><%= link_to t("edit"),
            edit_admin_subject_chapter_question_answer_path(@subject, @chapter,
            @question, answer), class: "btn btn-info" %>
          </td>
        <% end %>
        <% if can? :destroy, @answer %>
          <td><%= link_to t("destroy"),
            admin_subject_chapter_question_answer_path(@subject, @chapter,
            @question, answer), method: :delete,
            data: {confirm: t("confirm")},
            class: "btn btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to t("back"),
  admin_subject_chapter_question_path(@subject, @chapter, @question),
  class: "btn btn-default" %>
<% if can? :new, Answer %>
  <%= link_to t("new"),
    new_admin_subject_chapter_question_answer_path(@subject, @chapter,
    @question), class: "btn btn-success " %>
<% end %>
