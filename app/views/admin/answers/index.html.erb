<h1><%= t "answer.title" %></h1>
<table>
  <thead>
    <tr>
      <th><%= t "answer.content" %></th>
      <th><%= t "answer.is_correct" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer_content %></td>
        <td><%= answer.is_correct %></td>
        <% if can? :edit, @answer %>
          <td><%= link_to t("chapter.index.edit"),
            edit_admin_subject_chapter_question_answer_path(@subject, @chapter,
            @question, answer) %>
          </td>
        <% end %>
        <% if can? :destroy, @answer %>
          <td><%= link_to t("chapter.index.destroy"),
            admin_subject_chapter_question_answer_path(@subject, @chapter,
            @question, answer), method: :delete,
            data: {confirm: t("subject.index.confirm")} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if can? :new, Answer %>
  <%= link_to t("subject.index.new"),
    new_admin_subject_chapter_question_answer_path(@subject, @chapter,
    @question) %> |
<% end %>
<%= link_to t("subject.edit.back"),
  admin_subject_chapter_question_path(@subject, @chapter, @question) %>
