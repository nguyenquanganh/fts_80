<%= form_with model: [:admin, subject, chapter, question],
  local: true do |form| %>
  <%= render "shared/error", object: question %>

  <div class="field">
    <%= form.label :content, t("question.title") %>
    <%= form.text_field :content, id: :question_content %>
  </div>

  <div class="field">
    <%= form.label :question_type, t("question.question_type") %>
    <%= form.select :question_type, question_choices %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
