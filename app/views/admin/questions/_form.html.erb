<div class="format_login container">
  <%= form_with model: [:admin, subject, chapter, question],
    local: true do |form| %>
    <%= render "shared/error", object: question %>

    <div class="field">
      <%= form.label :content, t("admin.questions.content") %>
      <%= form.text_field :content, id: :question_content,
        class: "input-email" %>
    </div>
    <br/>
    <div class="field">
      <%= form.label :question_type, t("admin.questions.question_type") %>
      <br/>
      <%= form.select :question_type, question_choices %>
    </div>
    <br/>
    <div class="actions">
      <%= form.submit t("submit"), class: "input-submit"%>
    </div>
  <% end %>
</div>
