<h1><%= t "question.question_manage" %></h1>
<table>
  <thead>
    <tr>
      <th><%= t "question.title" %></th>
      <th><%= t "question.question_type" %></th>
      <th><%= t "chapter.chapter_id" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.question_type %></td>
        <td><%= question.chapter_id %></td>
        <% if can? :edit, @question %>
          <td><%= link_to t("chapter.index.edit"),
            edit_admin_subject_chapter_question_path(@subject,
            @chapter, question) %>
          </td>
        <% end %>
        <% if can? :destroy, @question %>
          <td><%= link_to t("chapter.index.destroy"),
            admin_subject_chapter_question_path(@subject, @chapter,
            question), method: :delete,
            data: {confirm: t("subject.index.confirm")} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if can? :new, Question %>
  <%= link_to t("subject.index.new"),
    new_admin_subject_chapter_question_path(@subject, @chapter) %> |
<% end %>
<%= link_to t("subject.edit.back"),
  admin_subject_chapter_path(@subject, @chapter) %>
