<h1><%= t "tests.index.title" %></h1>
<table>
  <thead>
    <tr>
      <th><%= t "tests.index.user_id" %></th>
      <th><%= t "tests.index.subject" %></th>
      <th><%= t "tests.index.chapter_id" %></th>
      <th><%= t "tests.index.date" %></th>
      <th><%= t "tests.index.score" %></th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.user.name %></td>
        <td><%= test.chapter.subject.name %></td>
        <td><%= test.chapter.name %></td>
        <td><%= test.date %></td>
        <td><%= test.score %></td>
        <td><%= link_to t("tests.index.view"), [:admin, test] %></td>
        <% if can? :destroy, Test %>
          <td><%= link_to t("tests.index.destroy"),
            admin_test_path(test),
            method: :delete, data: {confirm: t("subject.index.confirm")} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
