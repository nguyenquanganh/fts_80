<table>
  <thead>
    <tr>
      <th><%= t "admin.tests.user_name" %></th>
      <th><%= t "admin.subjects.name" %></th>
      <th><%= t "admin.chapters.name" %></th>
      <th><%= t "admin.tests.date" %></th>
      <th><%= t "admin.tests.score" %></th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.user.name %></td>
        <td><%= test.chapter.subject.name %></td>
        <td><%= test.chapter.name %></td>
        <td><%= test.date %></td>
        <td><%= test.correct_answer_of_user %> /
          <%= test.correct_answer_of_test %>
        </td>
        <td><%= link_to t("view"), [:admin, test],
          class: "btn btn-info" %></td>
        <% if can? :destroy, Test %>
          <td><%= link_to t("destroy"), admin_test_path(test),
            method: :delete, data: {confirm: t("confirm")},
            class: "btn btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
