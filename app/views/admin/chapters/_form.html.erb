<div class="format_login container">
  <%= form_with model: [:admin, subject, chapter], local: true do |form| %>
    <%= render "shared/error", object: chapter %>

    <div class="field">
      <%= form.label :name, t("admin.chapters.name") %>
      <%= form.text_field :name, id: :chapter_name,
        class: "input-email" %>
    </div>
    <br/>
    <div class="field">
      <%= form.label :content, t("admin.chapters.content") %>
      <%= form.text_area :content, id: :chapter_content %>
    </div>
    <br/>
    <div class="field">
      <%= form.label :question_number, t("admin.chapters.question_number") %>
      <%= form.number_field :question_number, id: :chapter_question_number,
        class: "input-email" %>
    </div>
    <br/>
    <div class="actions">
      <%= form.submit t("submit"), class: "input-submit" %>
    </div>
  <% end %>
</div>
