<%= form_with model: [:admin, subject, chapter], local: true do |form| %>
  <% if chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize chapter.errors.count, t("chapter.form.error") %>
        <%= t "chapter.form.saved" %></h2>
      <ul>
        <% chapter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, t("chapter.index.name") %>
    <%= form.text_field :name, id: :chapter_name %>
  </div>

  <div class="field">
    <%= form.label :content, t("chapter.index.content") %>
    <%= form.text_area :content, id: :chapter_content %>
  </div>

  <div class="field">
    <%= form.label :question_number, t("chapter.index.question_number") %>
    <%= form.number_field :question_number, id: :chapter_question_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
