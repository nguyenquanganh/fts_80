<%= form_with model: [:admin, subject], local: true do |form| %>
  <% if subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize subject.errors.count, t("subject.form.error") %>
        <%= t "subject.form.saved" %></h2>
      <ul>
        <% subject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, t("subject.index.name") %>
    <%= form.text_field :name, id: :subject_name %>
  </div>

  <div class="field">
    <%= form.label :content, t("subject.index.content") %>
    <%= form.text_area :content, id: :subject_content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
