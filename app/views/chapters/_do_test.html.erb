<% if user_signed_in? %>
  <%= form_for @test, url: user_tests_path(current_user),
    method: :post do |f| %>
    <%= f.hidden_field :chapter_id, autofocus: true %>
    <%= f.hidden_field :status, value: :waitting, autofocus: true %>
    <%= f.submit t("test.create") %>
  <% end %>
<% end %>

<%= link_to t("chapter.edit.back"),
  subject_path(@subject),class: "btn btn-default" %>
