<div class="format-login container">
  <h3 style="text-align: center"><%= t "layouts.login" %></h3>
  <%= form_for(resource, as: resource_name,
    url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, t("users.email") %><br />
      <%= f.email_field :email, autofocus: true, class: "input-email" %>
    </div>

    <div class="field">
      <%= f.label :password, t("users.password") %>
      <% if @minimum_password_length %>
        <em><% t("sessions.new.char_min",
          min_length: @minimum_password_length) %></em>
      <% end %>
      <br/>
      <%= f.password_field :password, autocomplete: "off",
        class: "input-password" %>
    </div>

    <div class="actions" style="margin-top: 20px;">
      <%= f.submit t("submit"), class: "input-submit" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
