<div class="format-login container">
  <h3 style="text-align: center"><%= t "users.signup" %></h3>

  <%= form_for(resource, as: resource_name,
    url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, t("users.name") %><br />
      <%= f.text_field :name, autofocus: true, class: "input-email" %>
    </div>

    <div class="field">
      <%= f.label :email, t("users.email") %><br />
      <%= f.email_field :email, autofocus: true, class: "input-email" %>
    </div>

    <div class="field">
      <%= f.label :password, t("users.password") %>
      <% if @minimum_password_length %>
      <em><% t("sessions.new.char_min",
        min_length: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",
        class: "input-email" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t("users.confirm") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "input-email" %>
    </div>

    <div class="actions">
      <%= f.submit t("submit"), class: "input-submit" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
