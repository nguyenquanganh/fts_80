<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.title"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <li><%= link_to t("layouts.header.help"), page_path(:help) %></li>
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layouts.header.subject"),
              admin_subjects_path %></li>
            <li><%= link_to t("layouts.header.user"), users_path %></li>
            <li>
              <%= link_to t("layouts.header.history"), admin_tests_path %></li>
          <% else %>
            <li><%= link_to t("layouts.header.subject"), subjects_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.account" %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.setting"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"),
                  destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.subject"), subjects_path %></li>
          <li><%= link_to t("layouts.header.login"),
            new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
